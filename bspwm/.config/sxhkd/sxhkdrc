#
# wm independent hotkeys
#
###--- Application shortcuts ---###
# File explorers
super + e
	urxvt -e ranger
super+shift+e
	dolphin
	#pcmanfm
# Web browsers
super + x
	google-chrome-stable --profile-directory="Profile 2"
super + c
	google-chrome-stable --profile-directory="Default"
super + v
	firefox
super + t
	thunderbird

# terminal emulator
super + Return
	urxvt

# get list of hidden things
# bspc query -N -n .hidden
# scratchpad
#ctrl + alt + t
	#id=$(cat /tmp/scratchid);\
	#bspc node $id --flag hidden;bspc node -f $id

# program launcher
super + space
	rofi -show run -lines 5 -eh 2 -width -64

# Power options
super + BackSpace
    ~/.config/scripts/shutdown_menu.sh
XF86Sleep
	betterlockscreen -s

# Print screen takes a screenshot
# With shift, it takes only one of the given window
Print
	maim -sou | xclip -selection clipboard -t "image/png"
	#scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
shift + Print
	maim ~/Pictures/Screenshots/$(date +%s).png | xclip -selection clipboard -t "image/png"
	#scrot -u ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png

###--- Audio ---###
# Mute microphone
XF86AudioMicMute
	pactl set-source-mute 1 toggle

ctrl + alt + slash
	pactl set-source-mute 1 toggle

# Volume
# TODO bluetooth audio is sink 1!
XF86AudioMute
	pactl set-sink-mute 0 toggle
{_,shift + }XF86AudioRaiseVolume
	pactl set-sink-volume 0 {+10%,+5%}
{_,shift + }XF86AudioLowerVolume
	pactl set-sink-volume 0 {-10%,-5%}

ctrl + alt + {_,shift + }comma
	pactl set-sink-volume 0 {-10%,-5%}
ctrl + alt + {_,shift + }period
	pactl set-sink-volume 0 {+10%,+5%}
ctrl + alt + m
	pactl set-sink-mute 0 toggle

# Media player controls
XF86Audio{Play,Pause,Prev,Next}
    playerctl {play-pause,pause,previous,next}
 
ctrl + alt + {j,k,l}
    playerctl -a {previous,play-pause,next}

# BRIGHTNESS
XF86MonBrightnessUp
    xbacklight -inc 10;
XF86MonBrightnessDown
    xbacklight -dec 10;
super + bracket{left,right}
	xbacklight {-dec,-inc} 5

## Polybar
# Hide polybar
XF86Launch1
	~/.config/scripts/toggle_polybar.sh

#
# bspwm hotkeys
#

# Quit/Restart bspwm
#super + shift + {q,r}
	#bspc {quit,wm -r}
super + shift + r
	bspc wm -r

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
# imitate temporary full screen
super + f
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
#super + {t,shift + t,s,f}
	#bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
	#bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#
#
###--- Node (window) management ---###

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
	#bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
#super + {_,shift + }c
	#bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus/send to the given desktop
super + {_,shift +}{comma,period}
	bspc {desktop -f,node -d} {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus/send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# rotate all windows
super + z; super + {h,j,k,l}
	bspc node @/ --rotate {270, 180, 180, 90}
# flip nodes vertically/horizontally
super + z; super + {z,x}
	bspc node @/ --flip {vertical,horizontal}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

XF86Favorites
	~/.config/scripts/bspwm_toggle_gaps.sh
